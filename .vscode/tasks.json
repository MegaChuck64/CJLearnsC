{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "windows": { "command" : "cl /c /EHsc /W4 /nologo ${fileDirname}\\main.c"},
            "linux": { "command" : "gcc src/*.c -o output/app -lX11"},
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Run",
            "type": "shell",
            "windows": { "command" : "link main.obj user32.lib kernel32.lib gdi32.lib /SUBSYSTEM:WINDOWS /ENTRY:WinMainCRTStartup /nologo; .\\main.exe"}, 
            "linux" : { "command" : "./output/app"},            
            "dependsOn": "Compile",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}